<div class="p-a white lt box-shadow">
  <div class="row">
    <div class="col-sm-6">
      <h4 class="m-b-0 _300">Welcome to railsJobs</h4>
      <small class="text-muted">Bootstrap <strong>4</strong> Web App Kit with AngularJS</small>
    </div>
    <div class="col-sm-6 text-sm-right">
      <div class="m-y-sm">
        <span class="m-r-sm">Start manage:</span>
        <div class="btn-group dropdown">
          <button class="btn white btn-sm ">Projects</button>
          <button class="btn white btn-sm dropdown-toggle" data-toggle="dropdown"></button>
          <div class="dropdown-menu dropdown-menu-scale pull-right">
            <a class="dropdown-item" href>Members</a>
            <a class="dropdown-item" href>Tasks</a>
            <a class="dropdown-item" href>Inbox</a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item">Profile</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="padding">
  <div class="row">
    <div class="col-sm-6 col-md-7">
      <div class="row">

        <% @jobs.each do |job| %>
          <div class="col-xs-6 col-sm-12 col-md-6">
            <div class="box">
              <div class="item">
                <div class="item-bg primary h6">
                  <p class="p-a"><%= job.details %></p>
                </div>
                <div class="p-a p-y-lg pos-rlt">
                  <%= image_tag "gentelella/production/assets/images/a0.jpg", alt: "...", class: "img-circle w-56" ,style: "margin-bottom: -7rem"%>
                </div>
              </div>
              <div class="p-a">
                <%= link_to( job_path(job),class:"text-md m-t block") do %>
                    <%= job.title %> <span class="label rounded primary">remote</span>
              <% end %>
                <p><small><%= job.city.capitalize %>, <%= job.country.capitalize %></small></p>
                <p><a href class="btn btn-sm rounded warn">Apply</a></p>
                <div class="text-xs">
                  <i class="fa fa-fw fa-eye"></i>
                  <strong><%= job.visits%></strong>
                  <i class="fa fa-fw fa-heart m-l-sm"></i>
                  <strong><%= job.likes %></strong>
                </div>
              </div>
            </div>
          </div>
        <% end %>


      </div>
    </div>
  </div>
</div>